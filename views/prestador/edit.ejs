<!DOCTYPE html>
<html>
    <head>
        <!--cambiar titulo-->
        <title>Editar Prestador</title>
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        <script
            src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
            integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
            crossorigin="anonymous"
        ></script>
        <link
            rel="stylesheet"
            type="text/css"
            href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons"
        />
        <link
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
            crossorigin="anonymous"
        />
        <link
            href="https://demos.creative-tim.com/material-dashboard/assets/css/material-dashboard.min.css?v=2.1.1"
            rel="stylesheet"
        />
        <link rel="stylesheet" type="text/css" href="css/custom.css" />
    </head>
    <body>
        <div class="wrapper">
            <div
                class="sidebar"
                data-color="purple"
                data-background-color="white"
                data-image="https://demos.creative-tim.com/material-dashboard/assets/img/sidebar-1.jpg"
            >
                <div class="logo">
                    <a href="#" class="simple-text logo-normal">
                        SOCIAL UCAB
                    </a>
                </div>
                <div
                    class="sidebar-wrapper ps-container ps-theme-default"
                    data-ps-id="6b680f0b-7aa3-0fc9-85a6-2928c2b884ae"
                >
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/">
                                <i class="material-icons">dashboard</i>
                                <p>Inicio</p>
                            </a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/programa">
                                <i class="material-icons">content_paste</i>
                                <p>Programas</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/institucion">
                                <i class="material-icons">content_paste</i>
                                <p>Instituciones</p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div
                class="main-panel ps-container ps-theme-default "
                data-ps-id="dd12fe69-6573-b20b-9235-25b0c223a37f"
            >
                <div class="content">
                    <div class="content-fluid">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <!--Cambiar por el nombre en plural de la tabla-->
                                <h3 class="card-title">Editar Prestador</h3>
                            </div>
                            <!--Cambiar a la ruta de edit correspondiente
                            /nombredetabla/edit/<%= id %>
                            -->
                            <div class=" card-body">
                                <form
                                    action="/prestador/edit/<%= id_prestador %>"
                                    method="post"
                                    name="form1"
                                >
                                    <!--AGREGAR O QUITAR LOS ATRIBUTOS NECESARIOS
                                    Utilizar el div class="form-group" como ejemplo
                                    --> 
                                    <div class="form-group">
                                        <label for="ci"> 
                                            Cedula
                                        </label>
                                        <input
                                            type="cedula"
                                            class="form-control"
                                            name="ci"
                                            id="ci"
                                            aria-describedby="ciHelp"
                                            placeholder="Ingrese la nueva Cedula"
                                            value="<%= ci %>"
                                        />
                                    </div>
                                    <div class="form-group">
                                        <label for="nombre"> 
                                            Nombre
                                        </label>
                                        <input
                                            type="nombre"
                                            class="form-control"
                                            name="nombre"
                                            id="nombre"
                                            aria-describedby="nombreHelp"
                                            placeholder="Ingrese el nuevo Nombre"
                                            value="<%= nombre %>"
                                        />
                                    </div>
                                    <div class="form-group">
                                        <label for="horas_cumplidas"> 
                                            Horas Cumplidas
                                        </label>
                                        <input
                                            type="horasCumplidas"
                                            class="form-control"
                                            name="horas_cumplidas"
                                            id="horas_cumplidas"
                                            aria-describedby="horas_cumplidasHelp"
                                            placeholder="Ingrese las nuevas Horas Cumplidas"
                                            value="<%= horas_cumplidas %>"
                                        />
                                    </div>
                                    <div class="form-group">
                                        <label for="carrera"> 
                                            Carrera
                                        </label>
                                        <input
                                            type="carrera"
                                            class="form-control"
                                            name="carrera"
                                            id="carrera"
                                            aria-describedby="carreraHelp"
                                            placeholder="Ingrese la nueva Carrera"
                                            value="<%= carrera %>"
                                        />
                                    </div>
                                    <div class="form-group">
                                        <label for="preferencia"> 
                                            Preferencia
                                        </label>
                                        <input
                                            type="preferencia"
                                            class="form-control"
                                            name="preferencia"
                                            id="preferencia"
                                            aria-describedby="preferenciaHelp"
                                            placeholder="Ingrese la nueva Preferencia"
                                            value="<%= preferencia %>"
                                        />
                                    </div>
                                    <div class="form-group">
                                        <label for="correo"> 
                                            Correo
                                        </label>
                                        <input
                                            type="Email"
                                            class="form-control"
                                            name="correo"
                                            id="correo"
                                            aria-describedby="correoHelp"
                                            placeholder="Ingrese el nuevo Correo"
                                            value="<%= correo %>"
                                        />
                                    </div>
                                    <button
                                        type="submit"
                                        class="btn btn-primary"
                                    >
                                        Actualizar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>